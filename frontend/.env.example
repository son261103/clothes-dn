# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api

# App Configuration
VITE_APP_NAME=Clothes Shop
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Modern clothing shop with golden rice theme

# Environment
VITE_NODE_ENV=development

# Features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_CHAT_SUPPORT=false

# Social Media Links
VITE_FACEBOOK_URL=https://facebook.com/your-shop
VITE_INSTAGRAM_URL=https://instagram.com/your-shop
VITE_TWITTER_URL=https://twitter.com/your-shop

# Payment Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# Google Configuration
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Email Configuration
VITE_SUPPORT_EMAIL=support@yourshop.com
VITE_CONTACT_EMAIL=contact@yourshop.com

# Storage Configuration
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# Currency Configuration
VITE_DEFAULT_CURRENCY=USD
VITE_SUPPORTED_CURRENCIES=USD,VND,EUR,GBP

# Language Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,vi,es,fr

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_IMAGE_OPTIMIZATION=true
VITE_ENABLE_CODE_SPLITTING=true

# Development Configuration
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_DEV_TOOLS=true
VITE_API_MOCKING=false